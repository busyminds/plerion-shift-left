{
	"name": "typescript-action",
	"description": "GitHub Actions TypeScript template",
	"version": "0.0.1",
	"author": "Noel Llevares <1972844+dashmug@users.noreply.github.com>",
	"private": true,
	"homepage": "https://github.com/busyminds/plerion-shift-left",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/busyminds/plerion-shift-left.git"
	},
	"bugs": {
		"url": "https://github.com/busyminds/plerion-shift-left/issues"
	},
	"keywords": ["actions", "node", "setup"],
	"exports": {
		".": "./dist/index.js"
	},
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
		"format": "biome check --write --unsafe .",
		"lint": "biome check",
		"build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
		"test": "jest"
	},
	"license": "MIT",
	"jest": {
		"preset": "ts-jest",
		"verbose": true,
		"clearMocks": true,
		"testEnvironment": "node",
		"moduleFileExtensions": ["js", "ts"],
		"testMatch": ["**/*.test.ts"],
		"testPathIgnorePatterns": ["/node_modules/", "/dist/"],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"coverageReporters": ["json-summary", "text", "lcov"],
		"collectCoverage": true,
		"collectCoverageFrom": ["./src/**"]
	},
	"dependencies": {
		"@actions/core": "1.11.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@jest/globals": "29.7.0",
		"@types/jest": "29.5.13",
		"@types/node": "22.7.4",
		"@vercel/ncc": "0.38.2",
		"jest": "29.7.0",
		"make-coverage-badge": "1.2.0",
		"ts-jest": "29.2.5",
		"typescript": "5.6.2"
	}
}
